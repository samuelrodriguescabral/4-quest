#include <stdio.h>

int main() {
    float valor1, valor2, diferenca;

    // Leitura dos dois valores
    printf("Digite o primeiro valor: ");
    scanf("%f", &valor1);

    printf("Digite o segundo valor: ");
    scanf("%f", &valor2);

    // Calculando a diferença
    diferenca = valor1 - valor2;

    // Exibindo a diferença
    printf("A diferenca entre %.2f e %.2f e: %.2f\n", valor1, valor2, diferenca);

    return 0;
}
